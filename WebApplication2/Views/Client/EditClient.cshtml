@model WebApplication2.Models.Client

@{
    ViewData["Title"] = "Edit Client";
}

<div class="card w-50 mx-auto mt-4">
    <div class="card-header">
        <h2 class="card-title">Edit Client</h2>
    </div>
    <div class="card-body">
        <form asp-action="Edit" asp-controller="Client" method="post">
            <input type="hidden" name="id" value="@Model.Client_Id" />
            <input type="hidden" name="page" value="@ViewBag.PageIndex" />
            <div class="form-group">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Phone">Phone</label>
                <input asp-for="Phone" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address">Address</label>
                <input asp-for="Address" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="City">City</label>
                <input asp-for="City" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="State">State</label>
                <input asp-for="State" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Country">Country</label>
                <input asp-for="Country" class="form-control" />
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary">Save</button>
                <form asp-action="GetAllClients" asp-controller="Client" method="post">
                    <input type="hidden" name="PageIndex" value="@ViewBag.PageIndex" />
                    <button type="submit" class="btn btn-primary">Cancel</button>
                </form>
            </div>
        </form>
    </div>
</div>

<style>
    .card {
        max-width: 500px;
        margin: 0 auto;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }
</style>

