@model Client

@{
    ViewData["Title"] = "Delete Client";
}
<div class="row justify-content-center">
<div class="card p-4">
    <h1>Delete Client</h1>
    <h4>Are you sure you want to delete this client?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Client ID:</dt>
        <dd class="col-sm-9">@Model.Client_Id</dd>
        <dt class="col-sm-3">Name:</dt>
        <dd class="col-sm-9">@Model.FirstName</dd>
        <dt class="col-sm-3">Address:</dt>
        <dd class="col-sm-9">@Model.Address</dd>
        <dt class="col-sm-3">Phone:</dt>
        <dd class="col-sm-9">@Model.Phone</dd>
        <dt class="col-sm-3">Email:</dt>
        <dd class="col-sm-9">@Model.Email</dd>
    </dl>

    <form method="post" asp-action="DeleteConfirmed" asp-route-clientId="@Model.Client_Id" class="mt-4">
        <input type="hidden" name="page" value="@ViewBag.PageIndex" />
        <div class=" card-footer">
        <button type="submit" class="btn btn-primary ">Delete</button>
        <a asp-action="GetAllClients" asp-route-page="@ViewBag.PageIndex" class="btn btn-primary ms-2">Cancel</a>
        </div>
    </form>

    </div>
</div>

 <style>
    .card-footer {
        display: flex;
        justify-content: center;
        background-color: transparent;
        border-top: none;
    }

    .card {
        margin-top: 30px;
        border: none;
        box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
        max-width: 500px;
    }

 </style>