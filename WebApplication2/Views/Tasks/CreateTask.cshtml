@model WebApplication2.Models.Task1



@{
    ViewData["Title"] = "Create New Task";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">@ViewData["Title"]</h2>

            <form asp-action="CreateTask1">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label">Task Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TimeEstimate" class="control-label">Time Estimate</label>
                    <select asp-for="TimeEstimate" class="form-control">
                        <option value="4">4</option>
                    </select>
                    <span asp-validation-for="TimeEstimate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="StartDate" class="control-label">Start Date</label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EndDate" class="control-label">End Date</label>
                    <input asp-for="EndDate" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Project_Id" class="control-label">Project Name</label>
                    <select asp-for="Project_Id" class="form-control form-control-lg" asp-items="@ViewBag.Projects"></select>
                </div>

                <div class="form-group text-center">
                    <button type="submit" formaction="@Url.Action("CreateTask1", "Tasks")" class="btn btn-primary">Create Task</button>
                    <a href="@Url.Action("TasksWithoutUsers", "Tasks")" class="btn btn-primary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

    <style>
        form {
            background-color: #f9f9f9;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        label {
            font-weight: bold;
        }

        .form-group {
            margin-bottom: 20px;
        }

    
      
    </style>
}