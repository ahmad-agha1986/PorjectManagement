@model List<User>

<h2>Assign Task</h2>

<form method="post" asp-action="AssignTask">
    <div class="form-group">
        <label for="inputTaskName">Task Name</label>
        <input type="text" class="form-control" id="inputTaskName" name="TaskName" required>
    </div>
    <div class="form-group">
        <label for="inputTaskDescription">Task Description</label>
        <textarea class="form-control" id="inputTaskDescription" name="TaskDescription" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Assign Task</button>
</form>

@if (Model.Count > 0)
{
    <h2>Available Users</h2>
    <table class="table">
        <thead>
            <tr>
                <th>User ID</th>
                <th>User Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.User_Id</td>
                    <td>@user.FirstName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No available users at the moment.</p>
}