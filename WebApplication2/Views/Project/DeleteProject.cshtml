@model WebApplication2.Models.Project1
@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger">@ViewData["Error"]</div>
}
<div class="row justify-content-center">
<div class="card">
    <div class="card-header">
        <h1 class="card-title">Delete Project</h1>
    </div>
    <div class="card-body">
        <p>Are you sure you want to delete this project?</p>

        <h3>@Model.Name</h3>

        @if (Model.Task != null && Model.Task.Count > 0)
        {
            <p>This project has @Model.Task.Count Tasks.</p>
        }

     

        <form method="post" asp-action="DeleteConfirmed" asp-route-ProjectId="@Model.Project_Id" class="mt-4">
            <input type="hidden" name="page" value="@ViewBag.PageIndex" />
            <div class="card-footer">
            <button type="submit" class="btn btn-primary ">Delete</button>
            <a asp-action="GetAllProjects" asp-route-page="@ViewBag.PageIndex" class="btn btn-primary ms-2 ">Cancel</a>
            </div>
        </form>


    </div>
</div>
</div>

<style>

    .card-footer {
        display: flex;
        justify-content: center;
        background-color: transparent;
        border-top: none;
    }

    .card {
        margin-top: 30px;
        border: none;
        box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
        max-width: 600px;
    }

</style>