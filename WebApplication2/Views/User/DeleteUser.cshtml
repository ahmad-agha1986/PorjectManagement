@model WebApplication2.Models.User

<head>
    <link rel="stylesheet" href="~/css/User/DeleteUser.css" />
</head>

@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger">@ViewData["Error"]</div>
}

<div class="row justify-content-center">
<div class="card">
    <div class="card-body">
           <h4 class="card-header">Delete User</h4>
        <h4 class="card-text">Are you sure you want to delete this user?</h4>

            <ul class="list-group list-group-flush">
                <li class="col-sm-10"><strong>Name:</strong> @Model.FirstName @Model.LastName</li>
                <li class="col-sm-10"><strong>Job Title:</strong> @Model.Job_Title</li>
                <li class="col-sm-10"><strong>Phone Number:</strong> @Model.Phone</li>
            </ul>



        <form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.User_Id" class="mt-4">
            <input type="hidden" name="page" value="@ViewBag.PageIndex" />

            <div class="card-footer">
            <button type="submit" class="btn btn-primary "> Delete</button>
            <a asp-action="GetAllUsers" asp-route-page="@ViewBag.PageIndex" class="btn btn-primary ms-2 ">Cancel</a>
            </div>

          </form>

        </div>
    </div>
</div>
