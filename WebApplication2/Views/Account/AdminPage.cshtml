
@{
    ViewData["Title"] = "Admin Page";
}


<head>
    <link rel="stylesheet" href="~/css/Account/AdminPage.css" />
</head>

<h1 class="welcome-msg">@ViewBag.UserName</h1>


<div class="logout-button">
    <a class="btn btn-primary" href="@Url.Action("Logout", "Account")">Logout</a>
</div>



<div class="container-fluid mt-4">
    <h2 class="text-center mb-4"> Admin Dashboard</h2>
    <div class="row">
        <div class="col-lg-3 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">User Registration</h5>
                    <p class="card-text">Register a new user account.</p>
                    <a href="@Url.Action("RegisterView", "Account")" class="btn btn-primary">Go to User Registration</a>
                </div>
            </div>
        </div>
        <div class="col-lg-3 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Tasks</h5>
                    <p class="card-text">Manage tasks  and assign users.</p>
                    <a href="@Url.Action("TasksWithoutUsers", "Tasks")" class="btn btn-primary">Go to Tasks</a>
                </div>
            </div>
        </div>
        <div class="col-lg-3 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Users</h5>
                    <p class="card-text">Manage user accounts.</p>
                    <a href="@Url.Action("GetAllUsers", "User")" class="btn btn-primary">Go to Users</a>
                </div>
            </div>
        </div>
        <div class="col-lg-3 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Projects</h5>
                    <p class="card-text">Manage projects and related tasks.</p>
                    <a href="@Url.Action("GetAllProjects", "Project")" class="btn btn-primary">Go to Projects</a>
                </div>
            </div>
        </div>

        <div class="col-lg-3 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Emails</h5>
                    <p class="card-text">Send Emails.</p>
                    <a href="@Url.Action("SendEmail", "Email")" class="btn btn-primary">Email</a>
                </div>
            </div>
        </div>

        <div class="col-lg-3 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Check Working Hours</h5>
                    <p class="card-text">User Records.</p>
                    <a href="@Url.Action("GetUserRecord", "User")" class="btn btn-primary">Working Hours</a>
                </div>
            </div>
        </div>

        <div class="col-lg-3 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Clients</h5>
                    <p class="card-text">Manage client accounts.</p>
                    <a href="@Url.Action("GetAllClients", "Client")" class="btn btn-primary">Go to Clients</a>
                </div>
            </div>
        </div>
    </div>
</div>