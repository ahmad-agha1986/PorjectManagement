@model LoginViewModel

<head>
    <link rel="stylesheet" href="~/css/Account/LoginView.css" />
</head>

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <p class="card-title  light-color">Login as an Admin or User</p>
                </div>
                <div class="card-body">
                    <form asp-controller="Account" asp-action="Login" method="post" autocomplete="off">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label for="Email">Email</label>
                            <input asp-for="Email" type="email" class="form-control" id="Email" required>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="PasswordHash">Password</label>
                            <input asp-for="PasswordHash" type="password" class="form-control" id="PasswordHash" required>
                            <span asp-validation-for="PasswordHash" class="text-danger"></span>
                        </div>

                      

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>